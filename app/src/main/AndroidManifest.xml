<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.isanalva.footballteams">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".FootballTeamsApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.isanalva.footballteams.ui.teams.TeamsActivity"
            android:label="@string/activity_teams_name" >
        </activity>
        <activity
            android:name="com.isanalva.footballteams.ui.teams.TeamsActivity2"
            android:label="@string/activity_teams_name"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
